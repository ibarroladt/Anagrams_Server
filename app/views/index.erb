<div class="container">
  <h1>Welcome to Anagrams!</h1>

  <label>Enter your word:</label>
  <form name="input" action="/new_word" method="post">
  <input type="text" name="user_word">
  <input type="submit" value="Submit">
</form>

 <% if @new_word %>
    <p>These are the anagrams for '<%= @new_word %>':</p>
    <p><%=@result%></p>

<% end %>



